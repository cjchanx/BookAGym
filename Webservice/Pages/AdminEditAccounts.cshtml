@page
@model Webservice.Pages.AdminEditAccountsModel
@{
}

<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UpdateAdminAccount.UserName"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="UpdateAdminAccount.UserName" class="form-control" readonly/>
            </div>
            <span class="text-danger" asp-validation-for="UpdateAdminAccount.UserName"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UpdateAdminAccount.Password"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="UpdateAdminAccount.Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="UpdateAdminAccount.Password"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Update"/>
            </div>
        </div>
    </form>
</div>