<h1>Add a Post</h1>

<hr />
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CreatePost.Header"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="CreatePost.Header" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="CreatePost.Header"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CreatePost.Comment"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="CreatePost.Comment" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="CreatePost.Comment"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Create"/>
            </div>
        </div>
    </form>
