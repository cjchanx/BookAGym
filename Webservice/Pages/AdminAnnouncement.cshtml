@page
@using Webservice.DatabaseHelper
@using Webservice.ContextHelpers
@inject DatabaseContextHelper context
@model Webservice.Pages.AdminAnnouncementModel
@{
}
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-page="/AdminHome">BookAGym</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a asp-page="/AdminHome" class="nav-link text-dark" asp-area="">View Users</a>
                        </li>
                        <li class="nav-item">
                            <a asp-page="/AdminAnnouncement" class="nav-link text-dark" asp-area="">View Announcement</a>
                        </li>
                        <li class="nav-item">
                            <a asp-page="/Home" class="nav-link text-dark" asp-area="">Logout</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
        <h1>View All Announcement</h1>
        <p>
            <a asp-page="/AdminCreateAnnouncement">Create New Announcement</a>
        </p>  
    <table class="table">
    <br/>
    <br/>
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Header
            </th>
            <th>
                Comment
            </th>
            @foreach (var item in Announcement_db.AllAnnouncement(context.DBContext))
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Header</td>
                        <td>@item.Comment</td>
                        <td>
                            <a type="submit" asp-action="Delete"  asp-controller="AdminAnnouncementModel" asp-route-id="@item.Id" >Delete</a>
                        </td>
                        <td>
                            <a asp-page="/AdminEditAnnouncement" asp-route-id="@item.Id">Manage</a>
                        </td>
                    </tr>
                }
            <th></th>
        </tr>
    </thead>
</table>
